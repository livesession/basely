{
    "theme": {
        "name": "picasso",
        "favicon": "/public/assets/logo.svg",
        "logo": {
            "light": "/public/assets/logo.svg",
            "dark": "/public/assets/logo-dark.svg"
        },
        "seo": {
            "domain": "basely.dev"
        },
        "icons": {
            "library": [
                {
                    "name": "lucide",
                    "default": true
                }
            ]
        },
        "appearance": {
            "colors": {
                "primary": "#BEFFC4",
                "light": "#052529"
            },
            "search": false,
            "header": {
                "externalArrow": true
            },
            "tabs": {
                "surface": "center"
            },
            "logo": {
                "header": true
            }
        }
    },
    "components": {
        "footer": {
            "kind": "minimal",
            "social": {
                "github": "https://github.com/livesession/basely"
            },
            "links": [
                {
                    "label": "LiveSession OpenSource Â®",
                    "href": "https://github.com/livesession"
                },
                {
                    "label": "xyd.dev",
                    "href": "https://xyd.dev"
                }
            ]
        }
    },
    "navigation": {
        "tabs": [
            {
                "title": "Documentation",
                "page": "docs"
            },
            {
                "title": "API Reference",
                "page": "docs/api-reference"
            }
        ],
        "anchors": {
            "header": [
                {
                    "title": "LiveSession",
                    "href": "https://github.com/livesession/basely"
                },
                {
                    "title": "GitHub",
                    "href": "https://github.com/livesession/basely",
                    "social": "github"
                }
            ]
        },
        "sidebar": [
            {
                "route": "docs",
                "pages": [
                    {
                        "group": "Get Started",
                        "pages": [
                            "docs/introduction"
                        ]
                    },
                    {
                        "group": "Components",
                        "pages": [
                            "docs/components/baseline"
                        ]
                    }
                ]
            }
        ]
    },
    "api": {
        "openapi": {
            "source": "./openapi.yaml",
            "route": "docs/api-reference"
        }
    },
    "engine": {
        "paths": {
            "@components/*": [
                "../../packages/basely-components/src/*"
            ]
        }
    }
}